doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, user-scalable=no')
    title Boost | Users
    link(rel='stylesheet', href='/css/main.css')
    link(href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,600,400italic,600italic,700,700italic,800,800italic', rel='stylesheet', type='text/css')
    link(rel='icon', type='image/png', href='/images/logo-circle.png')
  body.app
    #main
      noscript
        .contain-to-grid.top-nav-bar
          nav.top-bar.data-topbar(role="navigation")
            ul.title-area
              li.name
                a(href="/")
                  .logo Boost
        main
          .half-color-block
          .row
            .top-block
              h2.text-center JavaScript is required to view this site 
            .note-block
              h4.text-center Please enable JavaScript or use a different browser.

    - if (environment && environment == 'local')
      script.
        document.write('<script src="http://' + (location.host || 'localhost').split(':')[0] + ':35729/livereload.js?snipver=1"></' + 'script>')
    script(src='/vendors.js')
    script(src='/main.js')
